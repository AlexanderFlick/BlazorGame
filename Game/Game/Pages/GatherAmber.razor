@page "/amber"
@inject IAmberService GoldService
@using Game.Data;
@using Game.Services;

<div style="text-align:center">
    <h1><b>Gather @player.AmberType Amber</b></h1>
    <img src="images/Amber.jpg" alt="Amber"/>
    <p>Total Amber: @player.Amber</p>
    <p>Amber Per Click: @player.AmberPerClick</p>
    <button class="btn btn-primary" @onclick="GetAmber">Get Amber!</button>
</div>

@code {
    [CascadingParameter]
    public Player player { get; set; }

    private void GetAmber()
    {
        GoldService.GetAmber(player);
    }
}
