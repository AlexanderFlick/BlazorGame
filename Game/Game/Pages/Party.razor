@page "/party"
@using Game.Data;
@using Game.Services;
@inject IMonsterService MonsterService

<h3><b>Party</b></h3>
<p>Party size: @player.Monsters.Count()/@player.MaxPartySize</p>

@foreach (var teamMember in player.Monsters)
{
    <div style="card">
        @if (!teamMember.Locked)
        {
            <h3><b>@teamMember.Name</b> </h3>
        }
        else
        {
            <h3><b>@teamMember.Name</b> - Locked </h3>
        }
        <MonsterSummary monster="@teamMember"></MonsterSummary>
        <button @onclick="() => LockMonster(teamMember)" value="@teamMember">Lock</button>
        <button @onclick="() => RemoveMonster(teamMember)">Remove</button>
    </div>

}

@code {
    [CascadingParameter]
    public Player player { get; set; }

    public void LockMonster(Monster monster)
    {
        monster = MonsterService.LockOrUnlockMonster(monster);
    }

    public void RemoveMonster(Monster monster)
    {
        player = MonsterService.RemoveMonster(player, monster);
    }
}

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 40%;
        border-radius: 5px;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    img {
        border-radius: 5px 5px 0 0;
    }

    .container {
        padding: 2px 16px;
    }
</style>
